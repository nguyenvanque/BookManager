<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:gravity="center_horizontal"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/txtLogin"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
    />


    <ImageView
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/design"></ImageView>

    <RelativeLayout
        android:id="@+id/rea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:weightSum="4">

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edt_login_click"
                    android:drawablePadding="6dp"
                    android:ems="10"
                    android:textSize="14dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Email"
                    android:fontFamily="@font/mo_re"
                    android:textColorHint="@color/greydam2"
                    android:inputType="textEmailAddress|text"
                    android:padding="15dp"
                    android:drawableLeft="@drawable/ic_user"></EditText>

                <com.google.android.material.textfield.TextInputLayout
                    app:passwordToggleEnabled="true"
                    app:counterEnabled="true"
                    app:hintEnabled="false"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edt_login_click"
                        android:drawableStart="@drawable/ic_lock_alt"
                        android:drawablePadding="6dp"
                        android:ems="10"
                        android:textSize="14dp"
                        android:fontFamily="@font/mo_re"
                        android:textColorHint="@color/greydam2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:drawableLeft="@drawable/ic_lock_alt"></com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>
                <CheckBox
                    android:id="@+id/chkRememberPass"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mo_re"
                    android:text="Lưu thông tin"
                    android:textSize="14dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/dnt_have"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:text="Fogot password?"-->
<!--                android:textColor="@color/colorPrimaryDark"-->
<!--                android:textSize="20sp"-->
<!--                android:textStyle="bold"></TextView>-->

            <TextView
                android:id="@+id/txt_register"
                android:fontFamily="@font/mo_re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Bạn chưa có tài khoản? Click để đăng ký !"
                android:textSize="13sp"
                />
        </LinearLayout>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/design3"></ImageView>


    <Button
        android:id="@+id/btn_login"
        android:fontFamily="@font/mo_re"
        android:layout_below="@id/rea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_login"
        android:padding="15dp"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_recover"
        android:fontFamily="@font/mo_re"
        android:layout_below="@id/btn_login"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:text="Quên mật khẩu"
        android:textSize="13sp"
      />
</RelativeLayout>