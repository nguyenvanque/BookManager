<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_dialog_chitiet"
    android:id="@+id/realative_chitiet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/img_course"
        android:src="@drawable/sach"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_below="@id/img_course"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear_ma"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:text="Mã sách : "
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_MaSach"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:text="001"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ten"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Mã thể loại : "
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_MaTheLoai"
                android:text="Java"
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout

            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Tên sách : "
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_TenSach"
                android:text="Nguyễn Văn Quế"
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ten"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Nhà xuất bản: "
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_NXB"
                android:text="nxb"
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ten"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Tác giả: "
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_TacGia"
                android:text="nxb"
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ten"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Giá bìa: "
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_GiaBia"
                android:text="Gia bia"
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ten"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Số lượng: "
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_SoLuong"
                android:text="Gia bia"
                android:textSize="20dp"
                android:fontFamily="@font/mo_re"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_HuyChiTiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hủy"
            android:textColor="@color/white"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_login"></Button>
    </LinearLayout>

</RelativeLayout>