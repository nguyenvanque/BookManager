<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/background_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <EditText
        android:id="@+id/edt_MaSach"
        android:fontFamily="@font/mo_re"
        android:textColorHint="@color/greydam"
        android:padding="15dp"
        android:background="@drawable/edt_login_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã sách" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Spinner
            android:id="@+id/spnTheLoai"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            android:layout_weight="4"

            />
        <!--        <ImageView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            android:src="@drawable/button_plus_green"-->
        <!--            />-->
    </LinearLayout>
    <EditText
        android:id="@+id/edt_TenSach"
        android:padding="15dp"
        android:fontFamily="@font/mo_re"
        android:textColorHint="@color/greydam"
        android:layout_marginTop="15dp"
        android:background="@drawable/edt_login_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sách" />
    <EditText
        android:id="@+id/edt_TacGia"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/mo_re"
        android:textColorHint="@color/greydam"
        android:background="@drawable/edt_login_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tác giả" />
    <EditText
        android:id="@+id/edtt_NXB"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/mo_re"
        android:textColorHint="@color/greydam"
        android:background="@drawable/edt_login_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhà xuất bản" />
    <EditText
        android:id="@+id/edt_GiaBia"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/mo_re"
        android:textColorHint="@color/greydam"
        android:background="@drawable/edt_login_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá bìa" />
    <EditText
        android:id="@+id/edt_SoLuong"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/mo_re"
        android:textColorHint="@color/greydam"
        android:background="@drawable/edt_login_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số lượng" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/btnAddBook"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/mo_re"

            android:background="@drawable/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="addBook"
            android:text="Lưu" />
        <Button
            android:id="@+id/btnShowBook"
            android:textColor="@color/white"
            android:fontFamily="@font/mo_re"
            android:layout_weight="1"
            android:background="@drawable/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showBook"
            android:text="show" />
    </LinearLayout>

</LinearLayout>